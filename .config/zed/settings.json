// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "project_panel": {
    "dock": "left"
  },
  "vim_mode": false,
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  //autocomplete
  "features": {
    "inline_completion_provider": "supermaven"
  },
  //more
  "relative_line_numbers": true,
  // "format_on_save": true,

  //ai thingie
  // ai
  //  "ai": {
  //    "anthropic": {
  //      "api_key": "API-KEY"
  //    }
  //  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  // groq
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "https://api.groq.com/openai/v1",
      "available_models": [
        {
          "name": "llama-3.1-70b-versatile",
          "max_tokens": 131072,
          "max_output_tokens": null
        }
      ]
    }
  },

  // files
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "tailwindcss-language-server",
        "ruby-lsp",
        "!solargraph"
      ],
      "formatter": {
        "external": {
          "command": "bundle",
          "arguments": [
            "exec",
            "rubocop",
            "--server",
            "--auto-correct-all",
            "--fail-level",
            "error",
            "--stdin",
            "corrected.rb",
            "--stderr"
          ]
        }
      }
    },
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80,
      "hard_tabs": false
    },
    "YAML": {
      "hard_tabs": false
    }
  },
  "file_scan_exclusions": ["*.git", "*.DS_Store"],

  //fonts
  "ui_font_size": 16,
  "ui_font_weight": 500,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 300,
  // theme
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Storm",
    "dark": "Tokyo Night Storm"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  }
}
