#backend=wtype

# Icon mappings for password paths
# Add icons (emojis or fontawesome) that will be prepended to matching path segments
# Format: searchterm=icon
# Example usage:
# - If you have "colegio/network/info" and search for "colegio", it shows as "üè´ colegio/network/info"
# - If you search for "network", paths like "colegio/network/info" show as "colegio/üñ•Ô∏è network/info"
# You can use emojis or fontawesome icons
declare -A path_icons=(
    ["network"]="Û∞±î "
    ["colegio"]="Û±ÜÄ "
    ["bank"]="ÔÜú "
    ["email"]="ÔÄÉ "
    ["work"]="ÔÇ± "
    ["personal"]="ÔäΩ "
    ["social"]="ÔÉÄ "
    ["router"]="Û∞ë© "
    ["server"]="Û∞íã "
    ["vpn"]="Û∞ñÇ "
)
